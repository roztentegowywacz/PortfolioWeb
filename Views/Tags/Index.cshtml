@model IEnumerable<TechnologyTag>

@{
    ViewData["Title"] = "List of used dev technology";
}

@section styles {
    <link rel="stylesheet" href="https://cdn.rawgit.com/konpa/devicon/df6431e323547add1b4cf45992913f15286456d3/devicon.min.css">
}

<div class="row my-4">
    <div class="col">
        <h1>
            @ViewData["Title"]
        </h1>
    </div>
</div>

<div class="row mt-5">
    <div class="col list-group">
        @{
            int i = 1;
        }
        @foreach (var technologyTag in Model)
        {
            <div class="list-group-item list-group-item-action">
                <div class="row">
                    <a asp-controller="Tags" asp-action="ViewTag" asp-route-id="@technologyTag.Id" class="col-8 d-flex justify-content-start"> 
                        <div class="col-6 p-0">
                            <span class="font-weight-bold">@i | </span>
                            <span>@technologyTag.Name</span>
                        </div>
                        <div class="col-3">
                            <i class="@technologyTag.CssClassName h2"></i>
                        </div>
                    </a>
                    <div class="btn-group ml-auto pr-2" role="group" >
                        <a asp-controller="Tags" asp-action="Edit" asp-route-id="@technologyTag.Id" class="btn btn-outline-secondary"> 
                            Edit
                        </a>
                        <a asp-controller="Tags" asp-action="Remove" asp-route-id="@technologyTag.Id" class="btn btn-danger"> 
                            Remove
                        </a>
                    </div>
                </div>
            </div>
            i++;
        }
        <a asp-controller="Tags" asp-action="Edit">
            <div class="list-group-item btn-light">
                <span class="text-uppercase font-weight-bold">Add new technology tag</span>
            </div>
        </a>
    </div>
</div>