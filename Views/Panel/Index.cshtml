@model IEnumerable<Project>

@{
    ViewData["Title"] = "Menage your portfolio";
}

<div class="my-4">
    <div class="row">
        <div class="col">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col list-group">
            <a asp-controller="Tags" asp-action="Index">
                <div class="list-group-item btn-light">
                    <span class="text-uppercase font-weight-bold">Menage development technology tags</span>
                </div>
            </a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col list-group">
            @foreach (var project in Model)
            {
                <div class="list-group-item list-group-item-action">
                    <a asp-controller="Portfolio" asp-action="Project" asp-route-id="@project.Id"> 
                        <h4 class="mb-1">
                            @project.Title
                        </h4>
                        <p class="mb-1">
                            @project.Summary
                        </p>
                        <small>
                            Created @project.Created.
                        </small>
                    </a>
                    <div class="btn-group float-right" role="group" >
                        <a asp-controller="Panel" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-secondary"> 
                            Edit
                        </a>
                        <a asp-controller="Panel" asp-action="Remove" asp-route-id="@project.Id" class="btn btn-danger"> 
                            Remove
                        </a>
                    </div>
                </div>
            }
            <a asp-controller="Panel" asp-action="Edit">
                <div class="list-group-item btn-light">
                    <span class="text-uppercase font-weight-bold">Create new project</span>
                </div>
            </a>
        </div>
    </div>
</div>
