@model IEnumerable<PortfolioProject>

@{
    ViewData["Title"] = "Menage your portfolio";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col list-group">
            @foreach (var portfolioProject in Model)
            {
                <div class="list-group-item list-group-item-action">
                    <a asp-controller="Portfolio" asp-action="Project" asp-route-id="@portfolioProject.Id"> 
                        <h4 class="mb-1">
                            @portfolioProject.Title
                        </h4>
                        <p class="mb-1">
                            @portfolioProject.Summary
                        </p>
                        <small>
                            Created @portfolioProject.Created.
                        </small>
                    </a>
                    <div class="btn-group float-right" role="group" aria-label="Basic example">
                        <a asp-controller="Panel" asp-action="Edit" asp-route-id="@portfolioProject.Id" class="btn btn-outline-secondary"> 
                            Edit
                        </a>
                        <a asp-controller="Panel" asp-action="Remove" asp-route-id="@portfolioProject.Id" class="btn btn-danger"> 
                            Remove
                        </a>
                    </div>
                </div>
            }
            <a asp-controller="Panel" asp-action="Edit">
                <div class="list-group-item list-group-item-actio btn-light">
                    <span class="text-uppercase font-weight-bold">Create new project</span>
                </div>
            </a>
        </div>
    </div>
</div>
